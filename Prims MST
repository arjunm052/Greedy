#include<stdio.h>
#include<stdbool.h>
#define INF 999999

void PrimsMST(int v,int G[][v]){
	int edge=0,i,j,x,y,min,cost=0;
	bool selected[v];
	for(i=0;i<v;i++)
	selected[i]=false;
	selected[0]=true;
	
	printf("Edge  :  Weight\n");
	
	while(edge<v-1){
		min=INF;
		x=0;
		y=0;
		for(i=0;i<v;i++){
			if(selected[i]){
				for(j=0;j<v;j++){
					if(!selected[j] && G[i][j]){
						if(G[i][j]<min){
							min=G[i][j];
							x=i;
							y=j;
						}
					}
				}
			}
		}
		printf("%d -- %d : %d\n",x,y,G[x][y]);
		cost+=G[x][y];
		selected[y]=true;
		edge++;
	}
	printf("Minimum Cost: %d",cost);
}

int main(){
	int V,i,j;
	printf("Enter the total no. of Vertices: ");
	scanf("%d",&V);
	int G[V][V];
	printf("Enter the Adjacency Matrix: ");
	for(i=0;i<V;i++){
		for(j=0;j<V;j++){
			scanf("%d",&G[i][j]);
		}
	}
	PrimsMST(V,G);
	return 0;
}
